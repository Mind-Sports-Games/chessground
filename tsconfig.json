{
  "include": ["src/*.ts"],
  "filesGlob": ["src/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "./build/",
    "declarationMap": true,
    "removeComments": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "ES2019",
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["DOM", "ES2017", "ES2019"]
  }
}
